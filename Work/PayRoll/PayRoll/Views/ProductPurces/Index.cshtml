                async: false,
                dataType: "json",
                success: function (data) {
                    $("#ddlProductName").empty();
                    $("#ddlProductName").append($("<option></option>").val("-1").html("--Select--"));
                    $.each(data, function (i, item) {                       
                        $("#ddlProductName").append($("<option></option>").val(item.Key).html(item.Value));
                    });
