<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">Company Information</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <button type="button" id="btnShow">Show
      
    </button>
    <div class="modal fade" id="modal-lg">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Large Modal</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("Save_UpdateProductInfo", "Product", FormMethod.Post, new { Class = "form-horizontal", id = "frmProductInfo", name = "frmProductInfo" }))
                    {
                        <form class="form-horizontal">
                            <div class="card-body">
                                <div class="form-group row">
                                    <label for="lblName" class="col-md-2 col-form-label" style="text-align: right;">Name  :</label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" id="txtCompanyName" name="txtCompanyName" placeholder="Company Name">
                                        <input type="hidden" name="hdnCompanyId" id="hdnCompanyId" />
                                    </div>
                                    <label for="lblTitle" class="col-md-2 col-form-label" style="text-align: right;">Title :</label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" id="txtTitle" name="txtTitle" placeholder="Title">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="lblAddress" class="col-md-2 right col-form-label" style="text-align: right;">Address :</label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" id="txtAddress" name="txtAddress" placeholder="Address">

                                    </div>
                                    <label for="lblContactNo" class="col-md-2 right col-form-label" style="text-align: right;">Contact No :</label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" id="txtContactNo" name="txtContactNo" placeholder="Contact No">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="lblEmail" class="col-md-2 col-form-label" style="text-align: right;">Email :</label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" id="txtEmail" name="txtEmail" placeholder="Email">
                                    </div>
                                    <label for="lblBIN" class="col-md-2 right col-form-label" style="text-align: right;">BIN :</label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" id="txtBIN" name="txtBIN" placeholder="Business Identification Number">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="inputPassword3" class="col-md-2 col-form-label" style="text-align: right;">Password:</label>
                                    <div class="col-md-4">
                                        <input type="password" class="form-control" id="inputPassword3" placeholder="Password">
                                    </div>
                                    <label for="inputEmail4" class="col-md-2 right col-form-label" style="text-align: right;">Name :</label>
                                    <div class="col-md-4">
                                        <select class="form-control select2" style="width: 100%;">
                                            <option selected="selected">Alabama</option>
                                            <option>Alaska</option>
                                            <option>California</option>
                                            <option>Delaware</option>
                                            <option>Tennessee</option>
                                            <option>Texas</option>
                                            <option>Washington</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" id="btnSubmit" class="btn btn-info">Submit</button>
                                <button type="submit" id="btnCancel" class="btn btn-default">Cancel</button>
                                <button type="button" id="btnPreview" class="btn btn-default">Cancel</button>
                            </div>
                            <!-- /.card-footer -->
                        </form>
                    }
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->

</div>
